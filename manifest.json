{
  "manifest_version": 3,
  "name": "pm-shhh",
  "description": "An extension for hiding sensitive variables in Postman for web during livestreams",
  "version": "0.0.1",
  "author": "Claire Froelich",
  "permissions": ["storage", "scripting", "activeTab", "declarativeContent"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://*.postman.co/*", "https://*.postman.com/*"],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}
